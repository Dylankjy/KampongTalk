@page
@model KampongTalk.Pages.Onboarding.DoneModel
@{
}


<link rel="stylesheet" href="/lib/bulma/css/bulma-steps.css">

<section class="section">
    <div class="container">
        <div class="columns">
            <div class="column"></div>

            <div class="column is-three-fifths">

                <!--Steps-->
                <ul class="steps has-content-centered">
                    <li class="steps-segment">
                        <span class="steps-marker">1</span>
                        <div class="steps-content">
                            Preferences
                        </div>
                    </li>
                    <li class="steps-segment">
                        <span class="steps-marker">2</span>
                        <div class="steps-content">
                            Profile
                        </div>
                    </li>
                    <li class="steps-segment is-active">
                        <span class="steps-marker">3</span>
                        <div class="steps-content">
                            Done
                        </div>
                    </li>
                </ul>

                <div class="has-text-centered">

                    <h1 class="is-size-5">Your Account is all set up!</h1>
                    <p class="title is-size-4">Do you wish to take a guided tour around KampongTalk?</p>

                    <div class="columns is-vcentered">

                        <div class="column">
                            <a href="/Guides">
                                <div class="box is-inline-block m-2 has-text-centered has-background-success is-pulled-right">
                                    <p class="is-size-4 has-text-weight-bold">Yes, Let's go</p>
                                    <p>(Recommended for first-time users)</p>
                                </div>
                            </a>
                        </div>

                        <div class="column">
                            <a href="/Board">
                                <div class="box is-inline-block m-2 has-text-centered has-background-grey-light is-pulled-left">
                                    <p class="is-size-4 has-text-weight-bold">No</p>
                                    <p>Take me to the Kampong directly</p>
                                </div>
                            </a>
                        </div>
                    </div>

                </div>

            </div>

            <div class="column"></div>
        </div>


    </div>
</section>
