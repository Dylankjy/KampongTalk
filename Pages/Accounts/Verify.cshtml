@page
@model KampongTalk.Pages.Accounts.Verify

@{
    ViewData["Title"] = Model.LangData.accounts.verify.verifyYourPhone;
}

<style>
    #registerSection {
        max-width: 600px;
        margin: 0 auto;
    }
</style>

<section id="registerSection" class="section is-medium">
    <div class="has-text-centered">
        <h1 class="title">@Model.LangData.accounts.verify.almostThere</h1>
        <p class="subtitle">@Model.LangData.accounts.verify.verifyYourPhone</p>
    </div>
    <br/>

    <form method="post" class="mt-5">
        <input value="ResendMessageAction" type="hidden" asp-for="FormName"/>
        <div>
            <p class="title is-2 has-text-centered">
                <i class="fas fa-mobile-alt"></i>
            </p>
            <p class="subtitle is-6 has-text-centered"><strong class="has-text-weight-bold">@Model.LangData.accounts.verify.checkPhone</strong><br/>@Model.LangData.accounts.verify.sentCode@Model.CurrentUser.PhoneNumber.</p>
            @* <small>Didn't receive? <button type="submit">Resend</button></small> *@
        </div>

        <div class="has-text-centered is-size-1 mt-4 mb-4 has-text-grey-light">
            <i class="fas fa-arrow-down"></i>
        </div>
    </form>

    <form method="post">
        <input value="VerifyOTP" type="hidden" asp-for="FormName"/>
        <div class="box">
            <div class="field">
                <label class="label">@Model.LangData.accounts.otp</label>
                <div class="control has-icons-left">
                    <input class="input @Model.OtpInputClass" type="text" placeholder="000000" asp-for="IncomingOtpCode" maxlength="6" minlength="6" required>
                    <span class="icon is-small is-left">
                        <i class="fas fa-comment-dots"></i>
                    </span>
                </div>
                <small class="has-text-danger">@Html.Raw(Model.OtpCodeWarn)</small>
            </div>
        </div>
        <br/>
        <div class="has-text-centered">
            <button class="button is-primary" type="submit"><i class="fas fa-arrow-right"></i>&ensp;@Model.LangData.next</button>
        </div>
    </form>
</section>