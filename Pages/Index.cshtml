@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<style>
    .iconDiv {
        position: absolute;
        z-index: 2;
        padding:0px;
    }

    .iconLabelEnt {
        font-weight:bold;
        color:#FF6E17;
    }

    .iconLabelSoc {
        font-weight: bold;
        color: #5AADF7;
    }

    .iconLabelHelp {
        font-weight: bold;
        color: #086D54;
    }

    .iconLabelMe {
        font-weight: bold;
        color: #880837;
    }

</style>

<section class="section">
    <div class="columns">

        <!-- START: Main Column -->
        <div class="column is-four-fifths-desktop">
            <div class="container mb-3 has-text-centered">
                <h1 class="subtitle has-text-weight-bold">Welcome to Kampong Talk</h1>
            </div>

            <!-- START: KT Nav Map-->
            <div class="container has-text-centered" style="position:relative;">
                <img src="~/imgs/NavMapBG.png" style="height: 80vh; z-index:1; position:relative;"/>

                <!-- ChallengesIcon -->
                <div class="iconDiv" style="top:10vh; left:17vw;">
                    <!--ChallengesLink-->
                    <a href="">
                        <img src="~/imgs/NavMap_ChallengesIcon.png" style="height:14vh;"/>
                        <p class="iconLabelEnt is-size-5">Challenges</p>
                    </a>
                </div>

                <!-- EventsIcon -->
                <div class="iconDiv" style="top:4vh; left:30vw;">
                    <!--EventsLink-->
                    <a href="/Events">
                        <img src="~/imgs/NavMap_EventsIcon.png" style="height:17vh;"/>
                        <p class="iconLabelEnt is-size-4">Events</p>
                    </a>
                </div>

                <!-- InboxIcon -->
                <div class="iconDiv" style="top:35vh; left:10vw;">
                    <!--InboxLink-->
                    <a href="">
                        <img src="~/imgs/NavMap_InboxIcon.png" style="height:11vh;"/>
                        <p class="iconLabelSoc is-size-4">Inbox</p>
                    </a>
                </div>

                <!-- VoidDeckIcon -->
                <div class="iconDiv" style="top:28vh; left:37vw;">
                    <!--VoidDeckLink-->
                    <a href="">
                        <img src="~/imgs/NavMap_VoidDeckIcon.png" style="height:13vh;"/>
                        <p class="iconLabelSoc is-size-5">Void Deck</p>
                    </a>
                </div>


                <!-- BoardIcon -->
                <div class="iconDiv" style="top:31vh; left:22vw;">
                    <!--BoardLink-->
                    <a href="">
                        <img src="~/imgs/NavMap_BoardIcon.png" style="height:22vh;"/>
                        <p class="iconLabelSoc is-size-4">Board</p>
                    </a>
                </div>

                <!-- ProfileIcon -->
                <div class="iconDiv" style="top:23vh; left:51vw;">
                    <!--ProfileLink-->
                    <a href="">
                        <img src="~/imgs/NavMap_ProfileIcon.png" style="height:10vh;"/>
                        <p class="iconLabelMe is-size-5">My Profile</p>
                    </a>
                </div>

                <!-- SettingsIcon -->
                <div class="iconDiv" style="top:41vh; left:55vw;">
                    <!--SettingsLink-->
                    <a href="">
                        <img src="~/imgs/NavMap_SettingsIcon.png" style="height:8vh;"/>
                        <p class="iconLabelMe is-size-6">Settings</p>
                    </a>
                </div>

                <!-- GuidesIcon -->
                <div class="iconDiv" style="top:52vh; left:34vw;">
                    <!--GuidesLink-->
                    <a href="">
                        <img src="~/imgs/NavMap_GuidesIcon.png" style="height:15vh;"/>
                        <p class="iconLabelHelp is-size-4">Help</p>
                    </a>
                </div>

                <!-- SupportIcon -->
                <div class="iconDiv" style="top:42vh; left:47vw;">
                    <!--SupportLink-->
                    <a href="">
                        <img src="~/imgs/NavMap_SupportIcon.png" style="height:12vh;"/>
                        <p class="iconLabelHelp is-size-5">Support</p>
                    </a>
                </div>

            </div>
            <!-- END: KT Nav Map -->

        </div>
        <!-- END: Main Column -->

        <!-- START: Notification bar -->
        <div class="column has-background-white-bis">
            <p>Notifications Go Here</p>
            <!-- I'll make the notif partial later-->
        </div>
        <!-- END: Notification bar -->
    </div>
</section>