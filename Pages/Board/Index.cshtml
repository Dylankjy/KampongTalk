                    <span>@postInfo.Timestamp</span> <span id="fromWhere">&bull; From Your Friends' Likes</span>
                </div>
                <hr class="m-1" />

                <div class="columns mt-2">
                    <div class="column is-half">
                        <form>
                            <button class="button is-large is-fullwidth is-danger is-outlined" type="button" onclick="likePost(@postInfo.Pid, this)"><i class="far fa-thumbs-up mr-2"></i>@postInfo.likeCount Likes</button>
                        </form>
                        

                    </div>
                    <div class="column">
                        <a class="button is-large is-fullwidth is-primary is-outlined" href="/Board/Detail/@postInfo.Pid"><i class="fas fa-comment-dots mr-2"></i>Comments</a>
                    </div>
                </div>

            </div>
            }


        </div>
    </div>
